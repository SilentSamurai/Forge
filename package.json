{
    "bin": "build/main.js",
    "name": "forge",
    "version": "1.0.0",
    "description": "cross platform build tool",
    "main": "main.ts",
    "scripts": {
        "build": "npx tsc",
        "package": "pkg . --force-overwrite ",
        "global-install": "node global-install.js",
        "update-forge": "npm run build && npm run package && npm run global-install",
        "main": "ts-node src/main.ts yaml test/build.yaml -p windows -v test/values.yaml",
        "scriptJs": "ts-node src/main.ts script test/build.forge.js -p Deployment"
    },
    "pkg": {
        "scripts": "build/**/*.js",
        "output": "forge",
        "outputPath": "bin"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SilentSamurai/Forge.git"
    },
    "keywords": [
        "cross",
        "platform",
        "build",
        "tool"
    ],
    "author": "Sourav Das",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/SilentSamurai/Forge/issues"
    },
    "devDependencies": {
        "@types/node": "^12.20.42",
        "pkg": "^5.5.2",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.5"
    },
    "homepage": "https://github.com/SilentSamurai/Forge#readme",
    "dependencies": {
        "@types/handlebars": "^4.1.0",
        "@types/js-yaml": "^4.0.5",
        "chalk": "^4.1.2",
        "commander": "^8.3.0",
        "copyfiles": "^2.4.1",
        "handlebars": "^4.7.7",
        "js-yaml": "^4.1.0",
        "moment": "^2.29.1",
        "quoted-string-space-split": "^1.0.0"
    }
}
